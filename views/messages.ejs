<% layout('/layouts/boilerplate.ejs') -%>

<div class="chat-page">

  <!-- üîç Search Bar -->
  <div class="search-bar">
    <form action="/messages/search" method="GET">
      <input 
        type="text" 
        name="q" 
        placeholder="Search user..." 
        value="<%= typeof query !== 'undefined' ? query : '' %>" 
        required
      />
      <button type="submit">üîç</button>
    </form>
  </div>

  <!-- üîé Search Results -->
  <% if (searchResults && searchResults.length > 0) { %>
    <div class="search-results">
      <% searchResults.forEach(user => { %>
        <div class="search-result-item">
          <a href="/messages/chat/<%= user._id %>">
            <%= user.username %>
          </a>
        </div>
      <% }) %>
    </div>
  <% } else if (typeof query !== 'undefined' && searchResults.length === 0) { %>
    <div class="no-results">
      <p>No users found for "<%= query %>".</p>
    </div>
  <% } %>

  <!-- üí¨ Chat Container -->
  <div class="chat-container">

    <!-- LEFT SIDEBAR -->
    <div class="chat-sidebar">
      <h3>Chats</h3>
      <% if (chatList && chatList.length > 0) { %>
        <ul class="chat-list">
          <% chatList.forEach(chat => { %>
            <li class="chat-item">
              <a href="/messages/chat/<%= chat.user._id %>" class="chat-link">
                <div class="chat-info">
                  <strong><%= chat.user.username %></strong>
                  <p><%= chat.lastMessage.length > 25 ? chat.lastMessage.slice(0, 25) + '...' : chat.lastMessage %></p>
                </div>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="empty-text">No chats yet.</p>
      <% } %>
    </div>

    <!-- RIGHT CHAT WINDOW -->
    <div class="chat-window">
      <% if (chatUser) { %>
        <div class="chat-header">
          <h2><%= chatUser.username %></h2>
        </div>
    
        <div class="chat-body" id="chatBody">
          <% if (chatMessages && chatMessages.length > 0) { %>
            <% const myId = String(user && (user._id || user.id)); %>
            <% chatMessages.forEach(m => { 
                 const senderId = String(m.sender && (m.sender._id || m.sender));
                 const mine = senderId === myId;
            %>
              <div class="msg-row <%= mine ? 'sent' : 'received' %>">
                <div class="msg"><%= m.body %></div>
              </div>
            <% }) %>
          <% } else { %>
            <p class="empty-text">No messages yet. Start the conversation!</p>
          <% } %>
        </div>
    
        <form class="chat-input" action="/messages/send/<%= chatUser._id %>" method="POST" autocomplete="off">
          <input type="text" name="body" placeholder="Type a message..." required />
          <button type="submit">Send</button>
        </form>
    
      <% } else { %>
        <div class="chat-empty">
          <p>Select or search a user to start messaging</p>
        </div>
      <% } %>
    </div>
    
    <script>
      // Auto-scroll to the latest message
      const cb = document.getElementById('chatBody');
      if (cb) cb.scrollTop = cb.scrollHeight;
    </script>
  </div>
</div>

<style>
/* ====== GENERAL PAGE ====== */
.chat-page {
  width: 90%;
  margin: 2rem auto;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  font-family: "Segoe UI", sans-serif;
}

/* ====== SEARCH BAR ====== */
.search-bar {
  background: #f9f9f9;
  border-bottom: 1px solid #ddd;
  padding: 15px 20px;
  display: flex;
  justify-content: center;
}

.search-bar form {
  display: flex;
  width: 100%;
  max-width: 500px;
  align-items: center;
  gap: 10px;
}

.search-bar input {
  flex: 1;
  padding: 10px 15px;
  border: 1px solid #ccc;
  border-radius: 25px;
  font-size: 15px;
  outline: none;
}

.search-bar button {
  background: #007bff;
  color: white;
  border: none;
  border-radius: 50%;
  width: 38px;
  height: 38px;
  font-size: 16px;
  cursor: pointer;
  transition: 0.3s;
}

.search-bar button:hover {
  background: #0056b3;
}

/* ====== SEARCH RESULTS ====== */
.search-results {
  background: #fff;
  border-bottom: 1px solid #eee;
  padding: 10px 20px;
}

.search-result-item {
  padding: 8px 0;
  border-bottom: 1px solid #f0f0f0;
}

.search-result-item a {
  color: #007bff;
  text-decoration: none;
  font-weight: 500;
}

.search-result-item a:hover {
  text-decoration: underline;
}

/* ====== CHAT CONTAINER ====== */
.chat-container {
  display: flex;
  height: 80vh;
}

/* ====== SIDEBAR ====== */
.chat-sidebar {
  width: 30%;
  background: #f8f9fa;
  border-right: 1px solid #ddd;
  display: flex;
  flex-direction: column;
}

.chat-sidebar h3 {
  text-align: center;
  padding: 15px;
  border-bottom: 1px solid #ddd;
  background: #fff;
  margin: 0;
  font-size: 18px;
  color: #333;
}

.chat-list {
  flex: 1;
  overflow-y: auto;
  padding: 10px;
}

.chat-item {
  list-style: none;
  margin-bottom: 8px;
}

.chat-link {
  display: flex;
  align-items: flex-start;
  background: #fff;
  border-radius: 10px;
  padding: 12px;
  text-decoration: none;
  transition: background 0.2s ease;
  border: 1px solid #eee;
}

.chat-link:hover {
  background: #e7f1ff;
}

.chat-info strong {
  font-size: 15px;
  color: #333;
  display: block;
  margin-bottom: 5px;
}

.chat-info p {
  color: #666;
  font-size: 13px;
  margin: 0;
}

/* ====== CHAT WINDOW ====== */
.chat-window {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #fdfdfd;
}

.chat-header {
  position: sticky;
  top: 0;
  background: #007bff;
  color: white;
  padding: 15px;
  text-align: center;
  font-size: 18px;
  font-weight: 500;
  z-index: 1;
}

.chat-body {
  flex: 1;
  overflow-y: auto;
  padding: 20px;
  background: #f9f9f9;
}

/* Row controls alignment cleanly */
.msg-row {
  display: flex;
  margin: 4px 0 12px;
}

.msg-row.sent { justify-content: flex-end; }
.msg-row.received { justify-content: flex-start; }

.msg {
  max-width: 70%;
  padding: 10px 14px;
  border-radius: 14px;
  word-wrap: break-word;
  line-height: 1.35;
  box-shadow: 0 1px 2px rgba(0,0,0,0.04), 0 4px 12px rgba(0,0,0,0.06);
}

/* Outgoing (you) */
.msg-row.sent .msg {
  background: #007bff;
  color: #fff;
  border-bottom-right-radius: 6px; /* subtle ‚Äútail‚Äù feel */
  text-align: left;
}

/* Incoming */
.msg-row.received .msg {
  background: #e9e9e9;
  color: #333;
  border-bottom-left-radius: 6px;
}

.chat-input {
  display: flex;
  padding: 12px;
  background: #f1f1f1;
  border-top: 1px solid #ddd;
}

.chat-input input {
  flex: 1;
  padding: 10px;
  border-radius: 20px;
  border: 1px solid #ccc;
}

.chat-input button {
  margin-left: 10px;
  padding: 10px 16px;
  border: none;
  border-radius: 20px;
  background: #007bff;
  color: white;
  cursor: pointer;
  transition: 0.3s;
}

.chat-input button:hover {
  background: #0056b3;
}

.chat-empty {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #777;
  font-size: 16px;
}

/* ====== RESPONSIVE ====== */
@media (max-width: 768px) {
  .chat-container {
    flex-direction: column;
    height: auto;
  }
  .chat-sidebar {
    width: 100%;
    border-right: none;
  }
  .chat-window {
    width: 100%;
    min-height: 60vh;
  }
}
</style>
