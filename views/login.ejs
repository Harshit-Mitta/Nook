<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Nook | Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <!-- Bootstrap Icons -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    rel="stylesheet"
  >
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">

  <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
    <h2 class="text-center mb-4">Login to Nook</h2>

    <form action="/login" method="POST">
      <!-- Username -->
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          placeholder="Enter username"
          required
        >
      </div>

      <!-- Password field with eye icon -->
      <div class="mb-3">
        <label for="uuidPassword" class="form-label">Access Password</label>
        <div class="input-group">
          <input
            type="password"
            class="form-control"
            id="uuidPassword"
            name="uuidPassword"
            placeholder="Enter your unique password"
            required
          >
          <span class="input-group-text bg-white">
            <i class="bi bi-eye-slash" id="eyeIcon" style="cursor: pointer;"></i>
          </span>
        </div>
      </div>

      <!-- Login button -->
      <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>

      <!-- Signup section -->
      <div class="text-center">
        <p class="mb-2">Donâ€™t have an account?</p>
        <a href="/signup" class="btn btn-outline-success w-100">Signup</a>
      </div>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- JS to toggle password visibility -->
  <script>
    const eyeIcon = document.getElementById("eyeIcon");
    const passwordField = document.getElementById("uuidPassword");

    eyeIcon.addEventListener("click", () => {
      const type = passwordField.getAttribute("type") === "password" ? "text" : "password";
      passwordField.setAttribute("type", type);
      eyeIcon.classList.toggle("bi-eye");
      eyeIcon.classList.toggle("bi-eye-slash");
    });
  </script>
</body>
</html>
